---
import Section from "../Section.astro"

import { skills, skills_description } from "@cv"
---

<Section title="Skills Highlights">
  <p>{skills_description}</p>
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  p {
    margin-bottom: 1rem;
  }
</style>
